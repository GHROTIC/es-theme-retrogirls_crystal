<!-- slideshow -->

<theme>
  <formatVersion>4</formatVersion>
    <include>./systems/${system.theme}.xml</include>  
  <feature supported="carousel">
  <view name="system">
    <carousel name="systemcarousel">
     <type>horizontal</type>
     <pos>0.35 0.0</pos>
      <size>1 1</size>
      <color>ffffff00</color>
      <logoScale>1</logoScale>
      <logoSize>0 0</logoSize>
      <maxLogoCount>0</maxLogoCount>
    <visible>false</visible>
    <logoAlignment>right</logoAlignment>
      <defaultTransition>instant</defaultTransition>			
    </carousel>

	<image name="logo">
		<path>./../assets/logos/controllers/right/${system.theme}.png</path>
	</image>

	<image name="logo" extra="true">
        <pos>0.773 0.11</pos>
         <maxSize>0.2 0.200</maxSize>
        <alignment>right</alignment>
      </image>

	<image name="controller" extra="true">
		<path>./../assets/logos/controllers/right/${system.theme}.png</path>
        <pos>0.805 0.780</pos>
         <maxSize>0.20 0.20</maxSize>
        <alignment>right</alignment>
      </image> 

      <sound name="bgsound">
         <path>./assets/sounds/default/${system.theme}.ogg</path>
         <path>./assets/sounds/default/${system.theme}.mp3</path>
      </sound>  
	  
   <helpsystem name="help">
         <fontPath>./../_inc/fonts/OpenSans-Bold.ttf</fontPath>
         <fontSize>0.025</fontSize>     
         <pos>0.007 0.965</pos>      
         <textColor>FFFFFF</textColor>
   </helpsystem>  

<text name="shortdescription" extra="true">
 <fontPath>./../_inc/fonts/OpenSans-Bold.ttf</fontPath>
			<alignment>right</alignment>
			<color>ffffff</color>
			<fontSize>0.0255</fontSize>			
			<pos>0.445 0.05</pos>
            <size>0.52 0.0</size>
		</text>

    <text name="systemInfo">
         <pos>0.495 0.25</pos>
         <backgroundColor>00000000</backgroundColor>
         <color>FFFFFF</color>
          <size>0.47 0.047</size>
         <alignment>right</alignment>
         <fontPath>./../_inc/fonts/OpenSans-Bold.ttf</fontPath>
         <fontSize>0.040</fontSize>
   </text>


		<text name="description" extra="true">
           <fontPath>./../_inc/fonts/OpenSans-Semi-Bold.ttf</fontPath>
			<alignment>right</alignment>
			<color>ffffff</color>
			<fontSize>0.033</fontSize>
		</text>

 <image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <path>./../_inc/backgrounds/bg-systemdetailed.svg</path>
      </image> 


	  </view>
  </feature>  
</theme>

