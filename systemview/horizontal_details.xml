<!-- Horizontal icon menu -->

<theme>
  <formatVersion>4</formatVersion>
    <include>./systems/${system.theme}.xml</include>  
  <feature supported="carousel">
  <view name="system">
    <carousel name="systemcarousel">
     <type>horizontal</type>
     <pos>.37 -0.38</pos>
      <size>1 1</size>
      <color>ffffff00</color>
      <logoScale>1</logoScale>
      <logoSize>0.2 .3</logoSize>
      <maxLogoCount>1</maxLogoCount>
    <logoAlignment>right</logoAlignment>
      <defaultTransition>instant</defaultTransition>	
    </carousel>
    
    <text name="systemInfo">
         <pos>0.007 0.893</pos>
   </text>
	  
   <helpsystem name="help"> 
         <pos>0.007 0.965</pos>      
   </helpsystem>

<text name="shortdescription" extra="true">
 <fontPath>./../fonts/OpenSans-Bold.ttf</fontPath>
<visible>false</visible>
		</text>

   <text name="systemInfo">
         <pos>0.007 0.893</pos>
         <backgroundColor>00000000</backgroundColor>
         <color>FFFFFF</color>
         <alignment>left</alignment>
         <fontPath>./../fonts/OpenSans-Bold.ttf</fontPath>
         <fontSize>0.050</fontSize>
         <glowColor>00000016</glowColor>
         <glowSize>2</glowSize>
   </text>

	<image name="console" extra="true">
		<path>./../assets/logos/console/${system.theme}.png</path>
        <pos>0.840 0.725</pos>
         <maxSize>0.20 0.25</maxSize>
        <alignment>right</alignment>
      </image> 

<text name="description" extra="true">
           <fontPath>./../fonts/OpenSans-Semi-Bold.ttf</fontPath>
			<pos>.007 0.70</pos>
            <size>0.92 0</size>
			<alignment>left</alignment>
			<color>ffffff</color>
			<fontSize>0.038</fontSize>
        <glowColor>000046</glowColor>
         <glowSize>2</glowSize>
		</text>

<image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <path>./assets/filters/${themecolor}/horizontal_details.svg</path>
      </image>

	  </view>
  </feature>  
</theme>
