<!-- left side carousel icon menu -->

<theme>
<formatVersion>4</formatVersion>


<view name="system">
      <carousel name="systemcarousel">
		<type>vertical</type>
		<pos>0.05 0.0</pos>
		<size>1 1</size>
		<origin>0 0</origin>
		<color>00000000</color>
		<logoScale>2.2</logoScale>
		<logoSize>0.15 0.2</logoSize>
		<logoAlignment>left</logoAlignment>
		<maxLogoCount>5</maxLogoCount>
		<defaultTransition>instant</defaultTransition>			
      </carousel>
      <sound name="bgsound">
         <path>./assets/sounds/default/${system.theme}.ogg</path>
         <path>./assets/sounds/default/${system.theme}.mp3</path>
      </sound>	
		<image name="logo">
		<path>./../assets/logos/logo/$system.png</path>
	</image>

	  <text name="systemInfo">
         <pos>-0.042 0.868</pos>
         <backgroundColor>00000000</backgroundColor>
         <color>FFFFFF</color>
         <alignment>right</alignment>
         <fontPath>./../_inc/fonts/OpenSans-Bold.ttf</fontPath>
         <fontSize>0.050</fontSize>
   </text>
	

	
	 <helpsystem name="help">
         <fontPath>./../_inc/fonts/OpenSans-Bold.ttf</fontPath>
         <fontSize>0.025</fontSize>     
         <pos>0.566 0.942</pos>      
         <textColor>FFFFFF</textColor>
   </helpsystem>
	
	      <image name="art" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
      </image>	  
<image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <path>./_inc/bg-bottombar.svg</path>
      </image>
	

	  
 
  
</view>
</theme>
