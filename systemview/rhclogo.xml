<!-- Right side carousel icon menu -->

<theme>
<formatVersion>4</formatVersion>
    <include>./common.xml</include>
<view name="system">
      <carousel name="systemcarousel">
		<type>vertical</type>
		<pos>-0.05 -0.0</pos>
		<size>1 1</size>
		<origin>0 0</origin>
		<color>00000000</color>
		<logoScale>2.2</logoScale>
		<logoSize>0.15 0.2</logoSize>
		<logoAlignment>right</logoAlignment>
		<maxLogoCount>5</maxLogoCount>
		<defaultTransition>instant</defaultTransition>			
      </carousel>
	
		<image name="logo">
		<path>./../assets/logos/logo/$system.png</path>
	</image>

    <text name="systemInfo">
         <pos>0.032 0.868</pos>
         <alignment>left</alignment>
   </text>
	  
   <helpsystem name="help">   
         <pos>0.032 0.940</pos>      
   </helpsystem>

	  </view>
</theme>
