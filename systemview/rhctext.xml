<!-- Right side carousel text menu -->

<theme>
<formatVersion>4</formatVersion>
<view name="system">
      <carousel name="systemcarousel">
		<type>vertical</type>
		<pos>-0.05 -0.0</pos>
		<size>1 1</size>
		<origin>0 0</origin>
		<color>00000000</color>
		<logoScale>2.2</logoScale>
		<logoSize>0.15 0.2</logoSize>
		<logoAlignment>right</logoAlignment>
		<maxLogoCount>5</maxLogoCount>
		<defaultTransition>instant</defaultTransition>			
      </carousel>
      <sound name="bgsound">
         <path>./assets/sounds/${system.theme}.ogg</path>
         <path>./assets/sounds/${system.theme}.mp3</path>
      </sound>
    <text name="systemInfo">
         <pos>0.032 0.868</pos>
         <backgroundColor>00000000</backgroundColor>
         <color>FFFFFF</color>
         <alignment>left</alignment>
         <fontPath>./../_inc/fonts/OpenSans-Bold.ttf</fontPath>
         <fontSize>0.050</fontSize>
   </text>
	  
   <image name="bar" extra="true">
         <origin>0 0</origin>
         <pos>0.032 0.929</pos>
         <size>0 0</size>
         <path>./../assets/bar.jpg</path>
		 <zIndex>42</zIndex>
   </image> 

   <helpsystem name="help">
         <fontPath>./../_inc/fonts/OpenSans-Bold.ttf</fontPath>
         <fontSize>0.025</fontSize>     
         <pos>0.032 0.940</pos>      
         <textColor>FFFFFF</textColor>
   </helpsystem>

     <image name="art" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
      </image>	  
	  
	<image name="logo">
		<path>./../assets/logos/$system.png</path>
	</image>
	  </view>
</theme>
