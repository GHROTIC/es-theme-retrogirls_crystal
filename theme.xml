<?xml version="1.0" encoding="UTF-8"?>

<!-- default view -->

<theme defaultView="detailed">
   <formatVersion>7</formatVersion>
   <include>./config.xml</include>
	<include>./gamelists.xml</include>



   <variables>
      <baseColor>8b0000</baseColor>
      <gradientEndColor>6b2020</gradientEndColor>
      <centerFadeColor>8b000050</centerFadeColor>
      <bottomBarColor>8b0000c0</bottomBarColor>
      <glowColor>00000016</glowColor>
      <systemInfoColor>DDDDDDD8</systemInfoColor>
   </variables>
   
<!-- screen settings -->
	
   <view name="screen">
      <controllerActivity name="controllerActivity">
         <pos>0.01 0.012</pos>
         <size>0.085 0.025</size>
         <!--<horizontalAlignment>right</horizontalAlignment>-->
         <itemSpacing>0.003</itemSpacing>
         <imagePath>./assets/gamepad.svg</imagePath>
         <color>FFFFFF80</color>
         <activityColor>A0A0FFC0</activityColor>
         <hotkeyColor>FFA0A0C0</hotkeyColor>
      </controllerActivity>
   </view>

<!-- menu configs -->
	
   <view name="menu">
      <menuText name="menufooter">
         <fontPath>./_inc/fonts/Homizio.ttf</fontPath>
         <fontSize>0.025</fontSize>
         <color>c0e7ed</color>
      </menuText>
      <menuText name="menutext">
         <fontPath>./_inc/fonts/OpenSans-Light.ttf</fontPath>
         <fontSize>0.035</fontSize>
         <color>868686</color>
         <separatorColor>191919</separatorColor>
         <selectorColor>47a1f5</selectorColor>
         <selectorColorEnd>126b81</selectorColorEnd>
         <selectedColor>FFFFFF</selectedColor>
         <selectorGradientType>horizontal</selectorGradientType>
       </menuText>
      <menuTextSmall name="menutextsmall">
         <fontPath>./_inc/fonts/OpenSans-Semibold.ttf</fontPath>
         <fontSize>0.03</fontSize>
         <color>23f2f0</color>
      </menuTextSmall>
      <menuText name="menutitle">
         <fontPath>./_inc/fonts/OpenSans-Semibold.ttf</fontPath>
         <fontSize>0.04</fontSize>
         <color>DFECFA</color>
      </menuText>
      <menuBackground name="menubg">
         <color>021323</color>
         <path>./_inc/back.png</path>
         <fadePath>./_inc/fade.png</fadePath>
      </menuBackground>
      <menuIcons name="menuicons">
         <iconKodi>./_inc/menu_icons/Kodi.png</iconKodi>
         <iconSystem>./_inc/menu_icons/System.png</iconSystem>
         <iconUpdates>./_inc/menu_icons/Updates.png</iconUpdates>
         <iconGames>./_inc/menu_icons/Games.png</iconGames>
         <iconControllers>./_inc/menu_icons/Controllers.png</iconControllers>
         <iconUI>./_inc/menu_icons/UI.png</iconUI>
         <iconSound>./_inc/menu_icons/Sound.png</iconSound>
         <iconNetwork>./_inc/menu_icons/Network.png</iconNetwork>
         <iconScraper>./_inc/menu_icons/Scraper.png</iconScraper>
         <iconAdvanced>./_inc/menu_icons/Advanced.png</iconAdvanced>
         <iconQuit>./_inc/menu_icons/Quit.png</iconQuit>
         <iconRestart>./_inc/menu_icons/Restart.png</iconRestart>
         <iconShutdown>./_inc/menu_icons/Shutdown.png</iconShutdown>
         <iconFastShutdown>./_inc/menu_icons/Fastshutdown.png</iconFastShutdown>
		 <iconRetroachievements>./_inc/menu_icons/Contest.png</iconRetroachievements>
      </menuIcons>
      <helpsystem name="help">
         <fontPath>./_inc/fonts/OpenSans-Semibold.ttf</fontPath>
         <fontSize>0.035</fontSize>
         <pos>0.06 0.955</pos>
         <textColor>FFFFFF</textColor>
      </helpsystem>
   </view>
   
	
<!-- tinyscreen -->
 
   <include tinyScreen="true">./gpicase.xml</include>
   <view name="system" ifHelpPrompts="false">
      <image name="BottomBar" extra="true">
         <visible>false</visible>
      </image>
      <image name="BottomBar-shadow" extra="true">
         <visible>false</visible>
      </image>
   </view>
   <view name="basic, detailed, grid" ifHelpPrompts="false">
      <image name="bottom" extra="true">
         <visible>false</visible>
      </image>
      <image name="bottom-shadow" extra="true">
         <pos>0 0.96</pos>
      </image>
   </view>
   <view name="detailed" ifHelpPrompts="false">
      <textlist name="gamelist">
         <size>0.489 0.804</size>
      </textlist>
      <text name="md_description">
         <size>0.467 0.21</size>
      </text>
   </view>
   <view name="grid" ifHelpPrompts="false">
      <imagegrid name="gamegrid">
         <pos>0.025 0.16</pos>
         <size>0.950 0.84</size>
      </imagegrid>
   </view>
	
	
</theme>
