<!-- default view -->

	<theme defaultView="detailed">
   <formatVersion>7</formatVersion>
	<include>./gamelists.xml</include>
   
<!-- screen settings -->
	
   <view name="screen">
      <controllerActivity name="controllerActivity">
         <pos>0.01 0.012</pos>
         <size>0.085 0.025</size>
         <!--<horizontalAlignment>right</horizontalAlignment>-->
         <itemSpacing>0.003</itemSpacing>
         <imagePath>./assets/gamepad.svg</imagePath>
         <color>${ccontroller}</color>
         <activityColor>${cactivity}</activityColor>
         <hotkeyColor>${chotkey}</hotkeyColor>
      </controllerActivity>
   </view>

<!-- menu configs -->
	
   <view name="menu">
      <menuText name="menufooter">
         <fontPath>./fonts/Homizio.ttf</fontPath>
         <fontSize>0.025</fontSize>
         <color>${cmenufooter}</color>
      </menuText>
      <menuText name="menutext">
         <fontPath>./fonts/OpenSans-Light.ttf</fontPath>
         <fontSize>0.035</fontSize>
         <color>${cmenutext}</color>
         <separatorColor>${cmenuseperator}</separatorColor>
         <selectorColor>${cselector}</selectorColor>
         <selectorColorEnd>${cselectorend}</selectorColorEnd>
         <selectedColor>${cselected}</selectedColor>
         <selectorGradientType>${cgradienttype}</selectorGradientType>
       </menuText>
      <menuTextSmall name="menutextsmall">
         <fontPath>./fonts/OpenSans-Semibold.ttf</fontPath>
         <fontSize>0.03</fontSize>
         <color>${cmenusubtitle}</color>
      </menuTextSmall>
      <menuText name="menutitle">
         <fontPath>./fonts/OpenSans-Semibold.ttf</fontPath>
         <fontSize>0.04</fontSize>
         <color>${cmenutitle}</color>
      </menuText>
      <menuBackground name="menubg">
         <color>${cmenubg}</color>
	<path>./assets/menu_filters/${cmenufilter}/back.png</path>
         <fadePath>./assets/menu_filters/${cmenufilter}/fade.png</fadePath>
     </menuBackground>

      <menuIcons name="menuicons">
         <iconKodi>./assets/menu_icons/${cmenuicons}/Kodi.png</iconKodi>
         <iconSystem>./assets/menu_icons/${cmenuicons}/System.png</iconSystem>
         <iconUpdates>./assets/menu_icons/${cmenuicons}/Updates.png</iconUpdates>
         <iconGames>./assets/menu_icons/${cmenuicons}/Games.png</iconGames>
         <iconControllers>./assets/menu_icons/${cmenuicons}/Controllers.png</iconControllers>
         <iconUI>./assets/menu_icons/${cmenuicons}/UI.png</iconUI>
         <iconSound>./assets/menu_icons/${cmenuicons}/Sound.png</iconSound>
         <iconNetwork>./assets/menu_icons/${cmenuicons}/Network.png</iconNetwork>
         <iconScraper>./assets/menu_icons/${cmenuicons}/Scraper.png</iconScraper>
         <iconAdvanced>./assets/menu_icons/${cmenuicons}/Advanced.png</iconAdvanced>
         <iconQuit>./assets/menu_icons/${cmenuicons}/Quit.png</iconQuit>
         <iconRestart>./assets/menu_icons/${cmenuicons}/Restart.png</iconRestart>
         <iconShutdown>./assets/menu_icons/${cmenuicons}/Shutdown.png</iconShutdown>
         <iconFastShutdown>./assets/menu_icons/${cmenuicons}/Fastshutdown.png</iconFastShutdown>
		 <iconRetroachievements>./assets/menu_icons/${cmenuicons}/Contest.png</iconRetroachievements>
		 <iconEmuelec>./assets/menu_icons/${cmenuicons}/Emuelec.png</iconEmuelec>
      </menuIcons>
      <helpsystem name="help">
         <fontPath>./fonts/OpenSans-Semibold.ttf</fontPath>
         <fontSize>0.035</fontSize>
         <pos>0.06 0.955</pos>
         <textColor>${chelptext}</textColor>
      </helpsystem>
   </view>
	
	
	<!-- main config -->

  	<include>./lang/english.xml</include>
	<include lang="es">./lang/espanol.xml</include>
	<include lang="es_MX">./lang/espanol.xml</include>
	<include lang="eu">./lang/english.xml</include>
	<include lang="fr">./lang/francais.xml</include> 
	<include lang="pt">./lang/portugues.xml</include>

    <include subset="thememusic" name="yes" displayName="${yes}">./options/sound/sound_on.xml</include>
    <include subset="thememusic" name="no" displayName="${no}">./options/sound/sound_off.xml</include>

    <include subset="sysvdelay" name="d3" displayName="${delay3}">./options/sysvideodelay/video_delay_3.xml</include>
    <include subset="sysvdelay" name="d5" displayName="${delay5}">./options/sysvideodelay/video_delay_5.xml</include>
    <include subset="sysvdelay" name="d10" displayName="${delay10}">./options/sysvideodelay/video_delay_10.xml</include>
    <include subset="sysvdelay" name="d20" displayName="${delay20}">./options/sysvideodelay/video_delay_20.xml</include>
    <include subset="sysvdelay" name="d0" displayName="${delay0}">./options/sysvideodelay/video_delay_0.xml</include>   
    <include subset="sysvdelay" name="dnv" displayName="${novideo}">./options/sysvideodelay/no_video.xml</include>

	<include subset="vdelay" name="1" displayName="${delay1}">./options/videodelay/video_delay_1.xml</include>
    <include subset="vdelay" name="2" displayName="${delay2}">./options/videodelay/video_delay_2.xml</include>
    <include subset="vdelay" name="3" displayName="${delay3}">./options/videodelay/video_delay_3.xml</include>
    <include subset="vdelay" name="0" displayName="${delay0}">./options/videodelay/video_delay_0.xml</include>
    <include subset="vdelay" name="nv" displayName="${novideo}">./options/videodelay/no_video.xml</include>

    <include subset="colorset" name="Ruby" displayName="${ctred}">./options/colorschemes/red.xml</include>
    <include subset="colorset" name="Carbon" displayName="${ctblack}">./options/colorschemes/black.xml</include>
    <include subset="colorset" name="Sapphire" displayName="${ctblue}">./options/colorschemes/blue.xml</include>
    <include subset="colorset" name="Emerald" displayName="${ctgreen}">./options/colorschemes/green.xml</include>
	<include subset="colorset" name="Gold" displayName="${ctgold}">./options/colorschemes/gold.xml</include>

    <include subset="logoset" name="Color Logos" displayName="${colorlog}">./options/logosets/color.xml</include>
    <include subset="logoset" name="White Logos" displayName="${whitelog}">./options/logosets/white.xml</include>
    <include subset="logoset" name="Controller Logos" displayName="${conlog}">./options/logosets/controllers.xml</include>
    <include subset="logoset" name="Panel Logos" displayName="panel">./options/logosets/panel.xml</include>

    <include subset="iconset" name="default" displayName="Default">./options/helpicons/crystal.xml</include>
	<include subset="iconset" name="crystal" displayName="Crystal">./options/helpicons/crystal.xml</include>
	<include subset="iconset" name="crystal reverse" displayName="${idefaultrev}">./options/helpicons/crystal-rev.xml</include>
	<include subset="iconset" name="crystal X" displayName="Crystal X-Box">./options/helpicons/crystalx.xml</include>
	<include subset="iconset" name="crystal F" displayName="Crystal Famicom">./options/helpicons/crystalf.xml</include>
	<include subset="iconset" name="crystal S" displayName="Crystal SNES">./options/helpicons/crystals.xml</include>
	<include subset="iconset" name="crystal PSX" displayName="Crystal PSX">./options/helpicons/crystalpsx.xml</include>
	<include subset="iconset" name="crystal dream" displayName="Crystal Dreamcast">./options/helpicons/crystaldream.xml</include>
	<include subset="iconset" name="crystal saturn" displayName="Crystal Saturn">./options/helpicons/crystalsaturn.xml</include>   

    <include subset="systemview" name="default" displayName="Default">./systemview/default.xml</include>
	<include subset="systemview" name="panel" displayName="Panel">./systemview/panel.xml</include>
	<include subset="systemview" name="horizontal detailed" displayName="${systemdetails}">./systemview/horizontal_details.xml</include>
	<include subset="systemview" name="vertical detailed" displayName="${hordetail}">./systemview/details.xml</include>
	<include subset="systemview" name="horizontal simple" displayName="${horizontal}">./systemview/horizontal.xml</include>
	<include subset="systemview" name="carousel left" displayName="${lhc}">./systemview/carousel-left.xml</include>
	<include subset="systemview" name="carousel right" displayName="${rhc}">./systemview/carousel-right.xml</include>
    <include subset="systemview" name="small panel 16:9" displayName="Small Panel (16:9)">./systemview/panel169.xml</include>
	<include subset="systemview" name="small panel 3:2" displayName="Small Panel (3:2)">./systemview/panel32.xml</include>
 
    <include subset="bgset" name="artflix" displayName="${artflixbg}">./options/background/artflix.xml</include>
	 
    <include subset="slog" name="yes" displayName="${yes}">./options/syslogos/syslogo_yes.xml</include>
    <include subset="slog" name="no" displayName="${no}">./options/syslogos/syslogo_no.xml</include>
   
	
