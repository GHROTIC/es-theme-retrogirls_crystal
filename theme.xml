<!--help bar -->
		
   <view name="system" ifHelpPrompts="false">
     <image name="BottomBar" extra="true">
       <visible>false</visible>
      </image>
   </view>

	<view name="basic, detailed, grid" ifHelpPrompts="false">
      <image name="bottom" extra="true">
         <visible>false</visible>
      </image>
   </view>

	
</theme>
